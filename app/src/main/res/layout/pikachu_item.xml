<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <ImageView
        android:id="@+id/pikachu_img"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/pokemon_s_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />

    <TextView
        android:id="@+id/namePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/pikachu_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/typePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="80dp"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/attribute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pikachu_img" />

    <TextView
        android:id="@+id/attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text="@string/attribute"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/pokemonAttribute"
        app:layout_constraintTop_toBottomOf="@+id/pikachu_img" />

    <ScrollView
        android:id="@+id/pokemonAttribute"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pikachu_img">

        <LinearLayout
            android:id="@+id/layoutAttribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/attribute"
            android:orientation="vertical"
            android:textAlignment="center"
            />

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>